generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id            String       @id @default(uuid())
  name          String
  UserAnswer    UserAnswer[]
  sessionId     String
  session       Session      @relation(fields: [sessionId], references: [id])
  points        Int          @default(0)
  createdAt     DateTime     @default(now())
}

model Session {
  id                   String         @id @default(uuid())
  currentQuestionIndex String         @default("0")
  questions            Json
  phase                Phase          @default(WAITING_FOR_PLAYERS)
  currentQuestion      Question       @relation(fields: [currentQuestionIndex], references: [id])
  User                 User[]
  UserAnswer           UserAnswer[]
  createdAt            DateTime       @default(now())
}


model Question {
  id           String         @id @default(uuid())
  text         String
  options      Json
  correctIndex Int
  timeLimit    Int            @default(15) // in seconds
  UserAnswer   UserAnswer[]
  createdAt    DateTime       @default(now())
  Session      Session[]
}

model UserAnswer {
  id            String    @id @default(uuid())
  user          User      @relation(fields: [userId], references: [id])
  userId        String
  question      Question  @relation(fields: [questionId], references: [id])
  questionId    String
  session       Session   @relation(fields: [sessionId], references: [id])
  sessionId     String
  selectedIndex Int
  timeTaken     Int
  isCorrect     Boolean
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
}


enum Phase {
  // The game is waiting for players to join
  WAITING_FOR_PLAYERS
  // The game is in the quiz phase # 1
  QUIZ_1_PREPARING
  QUIZ_1_ANSWERING
  QUIZ_1_RESULTS
  // The game is in the quiz phase # 2
  QUIZ_2_PREPARING
  QUIZ_2_ANSWERING
  QUIZ_2_RESULTS
  // The game is in the quiz phase # 3
  QUIZ_3_PREPARING
  QUIZ_3_ANSWERING
  QUIZ_3_RESULTS
  // The game is in the quiz phase # 4
  QUIZ_4_PREPARING
  QUIZ_4_ANSWERING
  QUIZ_4_RESULTS
  // The game is in the quiz phase # 5
  QUIZ_5_PREPARING
  QUIZ_5_ANSWERING
  QUIZ_5_RESULTS
  // The game is in the quiz phase # 6
  QUIZ_6_PREPARING
  QUIZ_6_ANSWERING
  QUIZ_6_RESULTS
  // The game is in the quiz phase # 7
  QUIZ_7_PREPARING
  QUIZ_7_ANSWERING
  QUIZ_7_RESULTS
  // The game is in the quiz phase # 8
  QUIZ_8_PREPARING
  QUIZ_8_ANSWERING
  QUIZ_8_RESULTS
  // The game is in the quiz phase # 9
  QUIZ_9_PREPARING
  QUIZ_9_ANSWERING
  QUIZ_9_RESULTS
  // The game is in the quiz phase # 10
  QUIZ_10_PREPARING
  QUIZ_10_ANSWERING
  QUIZ_10_RESULTS
  // ----------------------------------
  // The game is in the termo phase # 
  TERMO_PREPARING
  // First world
  TERMO_1_ANSWERING
  TERMO_1_RESULTS
  // Second world
  TERMO_2_ANSWERING
  TERMO_2_RESULTS
  // Third world
  TERMO_3_ANSWERING
  TERMO_3_RESULTS
  // The game is in the final phase
  FINAL
}

